<body>

<h1>Reset bestelling</h1>
<div id="totaal">TOTAAL: €0.00</div>

<div id="producten"></div>

<button class="reset" onclick="resetBestelling()">Reset bestelling</button>

<script>
const menu = [
  { naam: "Fles cava / Fles witte wijn", prijs: 22.00 },
  { naam: "Picon / Glas cava", prijs: 5.00 },
  { naam: "Pizza Baguette", prijs: 5.00 },
  { naam: "Hamburger", prijs: 5.00 },
  { naam: "Croque", prijs: 4.00 },
  { naam: "Speciaalbier / Porto / Wijn", prijs: 3.50 },
  { naam: "Frisdrank / Snack / Koffie", prijs: 2.20 },
];

const bestelling = {};

function updateTotaal() {
  let totaal = 0;
  for (let naam in bestelling) {
    totaal += bestelling[naam].prijs * bestelling[naam].aantal;
  }
  document.getElementById('totaal').innerText = `TOTAAL: €${totaal.toFixed(2)}`;
}

function voegToe(naam, prijs) {
  if (!bestelling[naam]) {
    bestelling[naam] = { prijs: prijs, aantal: 0 };
  }
  bestelling[naam].aantal++;
  updateTotaal();
  updateKnoppen();
}

function verwijder(naam) {
  if (bestelling[naam]) {
    bestelling[naam].aantal--;
    if (bestelling[naam].aantal <= 0) {
      delete bestelling[naam];
    }
    updateTotaal();
    updateKnoppen();
  }
}

function resetBestelling() {
  for (let naam in bestelling) {
    delete bestelling[naam];
  }
  updateTotaal();
  updateKnoppen();
}

function updateKnoppen() {
  menu.forEach(item => {
    const countLabel = document.getElementById(`aantal-${item.naam}`);
    const aantal = bestelling[item.naam]?.aantal || 0;
    countLabel.textContent = aantal > 0 ? `x${aantal}` : "";
  });
}

function init() {
  const container = document.getElementById("producten");
  menu.forEach(item => {
    const div = document.createElement("div");
    div.className = "product";
    div.innerHTML = `
      <div onclick="voegToe('${item.naam}', ${item.prijs})">
        ${item.naam}<br>
        <span class="prijs">€${item.prijs.toFixed(2)}</span>
      </div>
      <span id="aantal-${item.naam}" class="aantal-label"></span>
      <button class="min-knop" onclick="event.stopPropagation(); verwijder('${item.naam}')">−</button>
    `;
    container.appendChild(div);
  });
}

init();
</script>
</body>
</html>
