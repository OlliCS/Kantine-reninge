  <style>
    body {
      font-family: Arial, sans-serif;
      background: #fff;
      margin: 0;
      padding: 0;
      text-align: center;
    }
    h1 {
      background: red;
      color: white;
      padding: 15px 0;
      margin: 0;
    }
    #totaal {
      font-size: 2em;
      color: green;
      margin: 20px 0 10px;
    }
    .product {
      position: relative;
      background: #e0e0e0;
      margin: 8px 10px;
      padding: 10px;
      text-align: left;
      border-radius: 5px;
      font-size: 1.2em;
    }
    .product .prijs {
      font-weight: bold;
    }
    .min-knop {
      position: absolute;
      bottom: 5px;
      right: 5px;
      background: red;
      color: white;
      border: none;
      padding: 4px 10px;
      border-radius: 4px;
      font-size: 1em;
    }
    .aantal-label {
      position: absolute;
      bottom: 5px;
      left: 10px;
      font-size: 0.9em;
      color: #333;
    }
    button.reset {
      background: red;
      color: white;
      font-size: 1.2em;
      border: none;
